<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="HOURLY DATA"
    android:id="@+id/textView_hourlyLabel"
    android:height="40dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Location :"
    android:id="@+id/textView_loacLabel"
    android:layout_below="@+id/textView_hourlyLabel"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView_currentLocation"
    android:layout_alignBottom="@+id/textView_loacLabel"
    android:layout_toRightOf="@+id/textView_loacLabel"
    android:layout_toEndOf="@+id/textView_loacLabel"
    android:text="textview" />

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/listView_data"
    android:layout_below="@+id/textView_loacLabel"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="25dp" />
</RelativeLayout>
